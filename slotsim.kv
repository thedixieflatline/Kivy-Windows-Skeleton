#:kivy 1.0.9

<SimulatorScreen>:
    FloatLayout:
        size: root.size
        pos: root.pos
        id: AppScreen
        orientation: 'vertical'
        Label:
            text: "Simulator"
            font_name: 'Games/Default/Fonts/Warszawa.otf'
            font_size: 70
        BoxLayout:
            orientation: 'horizontal'
            height: 50
            size_hint_y: None
            spacing: 10
            MyButton1:
                text: 'Game'
                on_press: root.manager.current = 'GameScreen'
            MyButton1:
                text: 'Settings'
                font_size: 20
                on_press: root.manager.current = 'SettingsScreen'
            MyButton:
                text: "Config"
                on_release: app.open_settings()
            MyButton:
                text: "Reelstrips"
            MyButton:
                text: "Paytable"
            MyButton:
                text: "Rules"
            MyButton:
                text: "Lines"
            MyButton:
                text: "Bet"
                #text: "Denom"
            MyButton:
                text: "Credit"

<GameScreen>:
    FloatLayout:
        size: root.size
        pos: root.pos
        id: GameScreen
        orientation: 'vertical'
        Label:
            text: "GAME"
            font_name: 'Games/Default/Fonts/Warszawa.otf'
            font_size: 70
        BoxLayout:
            orientation: 'horizontal'
            height: 50
            size_hint_y: None
            spacing: 10
            MyButton1:
                text: 'Settings'
                on_press: root.manager.current = 'SettingsScreen'
            MyButton:
                text: "Bet Up"
            MyButton:
                text: "Bet Down"
            MyButton:
                text: "Spin"

<SettingsScreen>:
    FloatLayout:
        size: root.size
        pos: root.pos
        id: GameScreen
        orientation: 'vertical'
        Label:
            text: "SETTINGS"
            font_name: 'Games/Default/Fonts/Warszawa.otf'
            font_size: 70
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            spacing: 10
            MyButton1:
                text: 'Game'
                on_press: root.manager.current = 'GameScreen'
            MyButton1:
                text: "Simulator"
                on_press: root.manager.current = 'SimulatorScreen'
            MyButton1:
                text: "Settings"
                on_release: app.open_settings()
            MyButton1:
                text: "Account"
                #on_release: app.open_settings()
            MyButton1:
                text: "Help"

