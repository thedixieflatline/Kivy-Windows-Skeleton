<GameScreen>:
    FloatLayout:
        size: root.size
        pos: root.pos
        id: Game Screen
        orientation: 'vertical'
        Label:
            text: "GAME"
        BoxLayout:
            orientation: 'horizontal'
            height: 50
            size_hint_y: None
            spacing: 10
            Button:
                text: 'Settings'
                font_size: 20
                on_press: root.manager.current = 'SettingsScreen'
            MyButton:
                text: "Bet Up"
            MyButton:
                text: "Bet Down"
            MyButton:
                text: "Spin"

<SettingsScreen>:
    FloatLayout:
        size: root.size
        pos: root.pos
        id: Game Screen
        orientation: 'vertical'
        Label:
            text: "SETTINGS"
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            spacing: 10
            Button:
                text: 'Game'
                font_size: 20
                on_press: root.manager.current = 'GameScreen'
            MyButton1:
                text: "App"
                on_press: root.manager.current = 'AppScreen'
            MyButton:
                text: "Kivy Settings"
                on_release: app.open_settings()
            MyButton:
                text: "Reels"
            MyButton:
                text: "Paytable"