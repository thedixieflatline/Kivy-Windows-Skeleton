#:kivy 1.0.9

<AppScreen>:
    FloatLayout:
        size: root.size
        pos: root.pos
        id: App Screen
        orientation: 'vertical'
        Label:
            text: "APP"
        BoxLayout:
            orientation: 'horizontal'
            height: 50
            size_hint_y: None
            spacing: 10
            Button:
                text: 'Game'
                font_size: 20
                on_press: root.manager.current = 'GameScreen'
            Button:
                text: 'Settings'
                font_size: 20
                on_press: root.manager.current = 'SettingsScreen'
            MyButton1:
                text: 'App'
                on_press: root.manager.current = 'AppScreen'
            MyButton:
                text: "Btn2"
            MyButton:
                text: "Btn3"
            MyButton:
                text: "Btn4"

